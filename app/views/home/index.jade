    | <noscript data-img="/path/to/image.jpg"
    |     data-mobile="/path/to/small-image/jpg"
    |     data-alt="Image alt">
    |   <img src="/path/to/image.jpg" alt="Solutions by Industry">
    | </noscript>

  pre.sh_js
    | $('[data-img]').each(function() {
    |   var self = $(this)
    |     , data = self.data()
    |     , src = ( data.mobile && $(window).width()<480 ) ?
    |         data.mobile : data.img ;
    |   self.replaceWith( '<img src="' + src + '" alt="' + data.alt + '" />' )
    | });

