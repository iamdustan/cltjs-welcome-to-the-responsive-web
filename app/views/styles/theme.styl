skookumGreen      = #507d72 // rgb(80,125,114)
skookumGreenDark  = #0d4237 // rgb(13,66,55)

html
  overflow hidden

// @group slides

body
  color #444
  text-shadow 0 2px 3px #fff

.vcard + .slide
  z-index 4

.deck-container
  >.slide
    background two-stop(#ffffff, #efefef)

  >.skookum
    background two-stop(skookumGreen, skookumGreenDark)
    color #fff
    text-shadow 0 2px 5px rgba(0,0,0,.5)

  >.orange
    background two-stop(darken(#ff8900, 10%), darken(#ff8900, 40%))
    color #fff
    text-shadow 0 2px 5px rgba(0,0,0,.5)

    pre
      background rgba(0,0,0,.875)

  >.dark
    background two-stop(#323232, #232323)
    color #eee
    text-shadow 0 1px 1px rgba(0,0,0,.25)

.tag
  background rgba(255,255,255,.9)
  border 0
  border-bottom 3px solid #000
  position absolute
  padding .75em
  width 60%
  right 0
  top 30%

  &.negative
    background two-stop(darken(red, 25%), darken(red, 50%))

.belowTag
  position absolute
  top 45%
  right 0
  width 55%

img.full
    position absolute
    top 0
    left 0
    min-height 100%
    min-width 100%
    z-index -1

figure
  img
    position absolute
    top 0
    left 0
    z-index -1

  &.full
    img
      min-height 100%
      min-width 100%

  figcaption
    bottom 132px
    color #fff
    padding-right 18px
    position absolute
    right 0
    text-shadow 0 0 0 transparent

    a,
    a:link,
    a:visited
      color #fff
      text-decoration none
      text-shadow none

  &.left
    img
      top 5%
      left 5%

.slide a
  border-radius 1em
  text-decoration none
  color #fff
  transition all .1s linear

  &:after
    content 'Â»'
    transition all .1s linear
    margin-left .25em

  &:focus,
  &:hover
    background skookumGreen
    padding .125em .5em
    margin -.125em -.5em

    &:after
      margin-left .5em
  
  &:active
    position relative
    top 1px
    box-shadow inset 0 1px 0 rgba(255,255,255,.25), inset 1px 1px 2px rgba(0,0,0,1), inset -1px -1px 2px rgba(255,255,255,.5)


// @end slides

// @group vcard footer

.vcard
  color #fff
  font-family: 'Kelly Slab', Rockwell, Impact, sans-serif;
  letter-spacing 1px
  padding 1.5em
  position absolute
  bottom 0
  left 0
  right 0
  z-index 3

  background two-stop(skookumGreen, skookumGreenDark)
  color #fff
  text-shadow 0 2px 5px rgba(0,0,0,.5)
  box-shadow 0 -1px 8px rgba(0,0,0,.75)
  border-top 1px solid rgba(255,255,255,.75)

  .fn
    display block
    font-size 2em
  
  a
    color #fff
    border-radius 1em
    inline-block()
    line-height 2em
    margin-left -.75em
    padding 0 .75em
    text-decoration none
    transition all .1s linear

    &:hover,
    &:focus
      background-color #607890
      color #fff
      text-shadow 0 1px 1px darken(#607890, 50%)
  
  .org
    display block
    background url('/images/logo-skookum-white.png')
    height 49px
    margin-top -25px
    position absolute
    right 1.5em
    top 50%
    text-indent -999em
    width 56px

    //background url('/images/logo-skookum.png')
    //height 50px
    //width 206px

// @end vcard footer

// @group general

h2.standard
  inline-block()
  background rgba(0,0,0,.5)
  color #fff
  margin-left -5.75% !important
  padding 2.5% 5%

.faded
  opacity .1

.list
  font-family 'Kelly Slab', Rockwell, Impact, sans-serif;
  font-size 2em
  font-weight 700
  letter-spacing 1px

  .list
    font-size .75em

  small
    display block
    font-size .75em

  li
    &.positive
      // todo
    &.negative
      color red

ol.list
  list-style-type lower-roman

pre
  border 0 !important
  font-family Monaco, fixed-width
// @end general

// @group desktop

@media only screen and (max-width: 480px)
  body.deck-container
    font-size .8em

  h1
    font-size 2em

  h2.tag
    position static

  .vcard
    position fixed
    padding .5em 1.5em


  .list
    font-size 1.5em

// @end desktop

// @group projector

@media only projector
  pre
    font-size 1.5em

// @end projector

.fin
  img
    position absolute
    top 5%
    right 5%

.directTo
  font-size 1.5em
  color #fff
  border-radius 1.5em
  background skookumGreen
  inline-block()
  padding .25em 1em
  text-shadow 0 1px 0 black
